blueprint:
  name: On at Sunset off later
  description: Turn a light on at Sunset, off at a specified time
  domain: automation
  input:
    target_light:
      name: Light
      description: Light (or Light Group) to be turned on/off
    off_time:
      name: Time
      description: Time (HH:MM) for the Light (or Light Group) to be turned off

trigger:
  - platform: sun
    event: sunset

action:
  - type: turn_on
    entitiy_id: !input target_light
    domain: light

  - wait_for_trigger:
    - platform: time
      at: !input off_time

  - type: turn_off
    entity_id: !input target_light
    domain: light

mode: single

